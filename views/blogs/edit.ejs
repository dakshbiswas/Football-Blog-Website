<%- include('../partials/header') -%>

<div class="container">
  <div class="column">
<h1 style="text-align: center; margin: 23px;">Edit <%=blog.title%> Blog</h1>
<div style="width: 40%; margin: 0 auto;">
<form action="/blog/<%=blog._id%>?_method=PUT" method="post">

    <div class="form-group">
    <input class="form-control" type="text" name="blog[title]" placeholder="Title" value="<%=blog.title%>">
    </div>

    <div class="form-group">
    <input class="form-control" type="text" name="blog[image]" placeholder="Image" value="<%=blog.image%>">
    </div>

    <div class="form-group">
      <textarea class="form-control" name="blog[body]" rows="10" placeholder="Content goes here"><%=blog.body%></textarea>
    </div>

    <button style="margin-bottom: 10px;" class="btn btn-dark btn-block">Submit</button>

</form>
<a href="/blog">Go Back</a>
</div>

</div>
  </div>

<%- include('../partials/footer') -%>
